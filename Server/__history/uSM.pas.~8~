function TServerMethods1.Clientes: TJSONObject;
Var vCliente : TCliente;
begin
  vCliente := TCliente.Create;
  //vCliente := TCliente.Create(Self);
  try
    vCliente.Id := 1;
    vCliente.Nome := 'Teste teste';
    Result := TJson.ObjectToJsonObject(vCliente);
  finally
    vCliente.Free;
  end;
end;


